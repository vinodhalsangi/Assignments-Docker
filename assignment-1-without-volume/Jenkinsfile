pipeline {
    agent {
        label {
            label "slave-1"
            customWorkspace "/mnt/docker-vol/assignment-1-without-volume/24Q1"
        }
    }
    stages {
        stage ("remove old images & containers") {
            steps {
                sh '''
                    #!/bin/bash
                    sudo service docker start
                    sudo docker container rm -f server-httpd-1
                    sudo docker system prune -af
                    sudo rm -rf *
                '''
            }
        }
        stage ("create container") {
            steps {
                sh "sudo docker run -itdp 81:80 --name server-httpd-1 httpd"
            }
        }
        stage ("git clone") {
            steps {
                sh "sudo git clone https://github.com/vinodhalsangi/Assignments-Docker.git /mnt/docker-vol/24Q1 -b 24Q1"
            }
        }
        stage ("deploy in docker container") {
            steps {
                sh "sudo docker cp /mnt/docker-vol/24Q1/index.html server-httpd-1:/usr/local/apache2/htdocs/"
            }
        }
        stage ("remove clone") {
            steps {
                sh "sudo rm -rf /mnt/docker-vol/24Q1"
            }
        }
    }
}
