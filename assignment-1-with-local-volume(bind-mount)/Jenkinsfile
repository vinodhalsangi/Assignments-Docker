pipeline {
    agent {
        label {
            label "slave-1"
            customWorkspace "/mnt/docker-vol/assignment-1-with-local-volume"
        }
    }
    stages {
        stage ("remove ws, old volume, images & containers") {
            steps {
                sh '''
                    #!/bin/bash
                    sudo rm -rf *
                    sudo service docker start
                    sudo docker container rm -f server-httpd-2
                    sudo docker system prune -af
                    sudo rm -rf /mnt/docker-vol/24Q2
                '''
            }
        }
        stage ("create container") {
            steps {
                sh "sudo docker run -itdp 82:80 -v /mnt/docker-vol/24Q2:/usr/local/apache2/htdocs/ --name server-httpd-2 httpd"
            }
        }
        stage ("deploy or git clone") {
            steps {
                sh "sudo git clone https://github.com/vinodhalsangi/assignments-docker.git /mnt/docker-vol/24Q2 -b 24Q2"
            }
        }
    }
}
