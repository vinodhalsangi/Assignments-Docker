pipeline {
    agent {
        label {
            label "slave-1"
            customWorkspace "/mnt/docker-vol/assignment-1-with-volume"
        }
    }
    stages {
        stage ("remove ws, old volume, images & containers") {
            steps {
                sh '''
                    #!/bin/bash
                    sudo service docker start
                    sudo docker container rm -f server-httpd-2
                    sudo docker volume rm vol-2
                    sudo docker system prune -af
                    sudo rm -rf 24Q2
                '''
            }
        }
        stage ("create volume") {
          steps {
            sh "sudo docker volume create vol-2"
          }
        }
        stage ("create container") {
            steps {
                sh "sudo docker run -itdp 82:80 -v vol-2:/usr/local/apache2/htdocs/ --name server-httpd-2 httpd"
            }
        }
        stage ("deploy or git clone") {
            steps {
                sh "sudo git clone https://github.com/vinodhalsangi/assignments-docker-1.git 24Q2 -b 24Q2"
                sh "sudo mv 24Q2/* /var/lib/docker/volumes/vol-2/_data/"
            }
        }
    }
}
