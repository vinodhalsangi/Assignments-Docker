pipeline {
    agent {
        label {
            label "slave-1"
        }
    }
    stages {
        stage ("old volume, images & containers") {
            steps { 
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                sh '''
                    #!/bin/bash
                    sudo service docker start
                    sudo docker container rm -f server-httpd-3
                    sudo docker volume rm vol-3
                    sudo docker system prune -af
                '''
                }
            }
        }
        stage ("create volume") {
          steps {
            sh "sudo docker volume create vol-3"
          }
        }
        stage ("create container") {
            steps {
                sh "sudo docker run -itdp 83:80 -v vol-3:/usr/local/apache2/htdocs/ --name server-httpd-3 httpd"
            }
        }
        stage ("deploy") {
            steps {
                sh "sudo mv index.html /var/lib/docker/volumes/vol-3/_data/"
            }
        }
    }
}
